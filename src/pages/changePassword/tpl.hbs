<div class="wrapper__profileChangePasword">
	<div class="wrap__arrow">
		<div class="blueCircle">
			<div><a href="/profile"><span>&#8678;</span></a></div>
		</div>
	</div>
	<div class="content">
		<div class="profile">
			{{{avatarLog}}}
			<form id="changePassword__form" class="changePassword__form" name="changePassword__form" action="/profile">
				<div class="form-control" id="form-control__pas">
